{
    "id": "jupyter-lab-hpc-cuda-ds",
    "version": "1.1.1",
    "description": "Run an interactive Jupyter Lab session on a Frontera GPU node.",
    "owner": "${apiUserId}",
    "enabled": true,
    "runtime": "SINGULARITY",
    "runtimeVersion": null,
    "runtimeOptions": [
        "SINGULARITY_RUN"
    ],
    "containerImage": "library://rstijerina/taccapps/jupyter-lab-hpc-cuda:1.1.1",
    "jobType": "BATCH",
    "maxJobs": -1,
    "maxJobsPerUser": -1,
    "strictFileInputs": true,
    "jobAttributes": {
        "description": null,
        "dynamicExecSystem": false,
        "execSystemConstraints": null,
        "execSystemId": "frontera",
        "execSystemExecDir": "${JobWorkingDir}",
        "execSystemInputDir": "${JobWorkingDir}",
        "execSystemOutputDir": "${JobWorkingDir}",
        "execSystemLogicalQueue": "rtx-dev",
        "archiveSystemId": "cloud.data",
        "archiveSystemDir": "HOST_EVAL($HOME)/tapis-jobs-archive/${JobCreateDate}/${JobName}-${JobUUID}",
        "archiveOnAppError": true,
        "isMpi": false,
        "mpiCmd": null,
        "cmdPrefix": "source tapisjob.env; source tap.sh; export APPTAINER_HOME=/home/jovyan/work; export APPTAINER_PWD=/home/jovyan/work; mkdir -p ${_tapisJobWorkingDir}/tmp $HOME/.jupyter-lab-hpc/Work;",
        "parameterSet": {
            "appArgs": [],
            "containerArgs": [
                {
                    "name": "tmpfs",
                    "inputMode": "FIXED",
                    "arg": "--writable-tmpfs",
                    "notes": {
                        "isHidden": true
                    }
                },
                {
                    "name": "Jupyter Mounts",
                    "description": "Mount for user work and persistent jupyter env",
                    "inputMode": "FIXED",
                    "arg": "--bind $HOME/.jupyter-lab-hpc:/home/jovyan/work,/work/00849/tg458981/designsafe-work/${JobOwner}:/home/jovyan/work/Work",
                    "notes": {
                        "isHidden": true
                    }
                },
                {
                    "name": "NVIDIA Flag",
                    "description": "Flag to enable NVIDIA cuda",
                    "inputMode": "FIXED",
                    "arg": "--nv",
                    "notes": {
                        "isHidden": true
                    }
                }
            ],
            "schedulerOptions": [
                {
                    "name": "TACC Scheduler Profile",
                    "description": "Scheduler profile for HPC clusters at TACC",
                    "inputMode": "FIXED",
                    "arg": "--tapis-profile tacc-apptainer",
                    "notes": {
                        "isHidden": true
                    }
                },
                {
                    "name": "TAP Session Substring",
                    "description": "TAP Functions require the substring 'tap_' and in the slurm job name in order to function.",
                    "inputMode": "FIXED",
                    "arg": "--job-name ${JobName}-tap_",
                    "notes": {
                        "isHidden": true
                    }
                }
            ],
            "envVariables": [
                {
                    "key": "TMPDIR",
                    "value": "${_tapisJobWorkingDir}/tmp",
                    "description": "tmp dir for apptainer",
                    "inputMode": "FIXED",
                    "notes": {
                        "isHidden": true
                    }
                }
            ],
            "archiveFilter": {
                "includes": [],
                "excludes": [
                    "tmp"
                ],
                "includeLaunchFiles": true
            }
        },
        "fileInputs": [],
        "fileInputArrays": [],
        "nodeCount": 1,
        "coresPerNode": 16,
        "memoryMB": 128000,
        "maxMinutes": 120,
        "subscriptions": [],
        "tags": []
    },
    "tags": [
        "portalName: ALL"
    ],
    "notes": {
        "label": "Jupyter Lab HPC (GPU)",
        "helpUrl": "https://www.designsafe-ci.org/user-guide/tools/jupyterhub/#designsafe-hpc-jupyter-guide",
        "hideNodeCountAndCoresPerNode": true,
        "isInteractive": true,
        "icon": "Jupyter",
        "category": "Analysis",
        "queueFilter": [
            "rtx-dev",
            "rtx"
        ]
    }
}
