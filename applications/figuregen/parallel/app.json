{
    "id": "FigureGen-Parallel",
    "version": "51.0.0",
    "description": "Creates images for ADCIRC files. Processes in parallel.",
    "owner": "${apiUserId}",
    "enabled": true,
    "runtime": "ZIP",
    "runtimeVersion": null,
    "runtimeOptions": null,
    "containerImage": "tapis://cloud.data/corral/tacc/aci/CEP/applications/v3/figuregen/v51/parallel/figuregen_parallel.zip",
    "jobType": "BATCH",
    "maxJobs": -1,
    "maxJobsPerUser": -1,
    "strictFileInputs": true,
    "jobAttributes": {
        "description": "",
        "dynamicExecSystem": false,
        "execSystemConstraints": null,
        "execSystemId": "stampede3",
        "execSystemExecDir": "${JobWorkingDir}",
        "execSystemInputDir": "${JobWorkingDir}",
        "execSystemOutputDir": "${JobWorkingDir}",
        "execSystemLogicalQueue": "skx-dev",
        "archiveSystemId": "cloud.data",
        "archiveSystemDir": "HOST_EVAL($HOME)/tapis-jobs-archive/${JobCreateDate}/${JobName}-${JobUUID}",
        "archiveOnAppError": true,
        "isMpi": false,
        "mpiCmd": null,
        "cmdPrefix": null,
        "parameterSet": {
            "appArgs": [
                {
                    "name": "Input file",
                    "description": "FigureGen input file (.inp). You can drag and drop file from the left or just type in the file name. To test this out type in 'FG51.inp'.",
                    "arg": "FG51.inp",
                    "inputMode": "REQUIRED"
                }
            ],
            "containerArgs": [],
            "schedulerOptions": [
                {
                    "name": "TACC Scheduler Profile",
                    "description": "Scheduler profile for HPC clusters at TACC",
                    "inputMode": "FIXED",
                    "arg": "--tapis-profile figuregen_parallel_v51",
                    "notes": {
                        "isHidden": true
                    }
                },
                {
                    "name": "Slurm job name",
                    "description": "Set the slurm job name to be identical to the Tapis job name.",
                    "inputMode": "FIXED",
                    "arg": "--job-name ${JobName}",
                    "notes": {
                        "isHidden": true
                    }
                }
            ],
            "envVariables": [],
            "archiveFilter": {
                "includes": [],
                "excludes": [
                    "figuregen_parallel.zip"
                ],
                "includeLaunchFiles": true
            }
        },
        "fileInputs": [
            {
                "name": "Input Directory",
                "description": "The directory containing your FigureGen input files. You can drag the link for the directory from the Data Browser on the left, or click the 'Select Input' button and then select the directory. To try this out with example data, copy and paste 'tapis://designsafe.storage.community//app_examples/figuregen/input'above.",
                "inputMode": "REQUIRED",
                "autoMountLocal": true,
                "sourceUrl": "tapis://cloud.data/corral/tacc/aci/CEP/community/app_examples/figuregen/input",
                "targetPath": "inputDirectory"
            }
        ],
        "fileInputArrays": [],
        "nodeCount": 1,
        "coresPerNode": 48,
        "memoryMB": 192000,
        "maxMinutes": 120,
        "subscriptions": [],
        "tags": []
    },
    "tags": [
        "portalName: DesignSafe"
    ],
    "notes": {
        "icon": "Generic-Vis",
        "label": "FigureGen Parallel",
        "helpUrl": "/use-designsafe/tools-applications/visualization/figuregen",
        "hideNodeCountAndCoresPerNode": false,
        "category": "Visualization"
    }
}
